{% comment %}
  Delivery Date Estimator & Countdown Timer
  Theme App Extension Block - Shows on product pages

  HOW TO USE:
  1. Copy this file into: extensions/delivery-date-widget/blocks/
  2. Delete the default .liquid file that was there
  3. Run: shopify app dev
  4. In your dev store: Online Store ‚Üí Customize ‚Üí Product page ‚Üí Add block ‚Üí Delivery Date Estimator
{% endcomment %}

{% assign cutoff_hour = block.settings.cutoff_hour | default: 14 %}
{% assign processing_days = block.settings.processing_days | default: 1 %}
{% assign shipping_min = block.settings.shipping_days_min | default: 3 %}
{% assign shipping_max = block.settings.shipping_days_max | default: 5 %}
{% assign show_countdown = block.settings.show_countdown %}
{% assign exclude_weekends = block.settings.exclude_weekends %}
{% assign urgency_color = block.settings.urgency_color %}
{% assign text_color = block.settings.text_color %}
{% assign bg_color = block.settings.background_color %}
{% assign border_color = block.settings.border_color %}
{% assign icon_style = block.settings.icon_style %}
{% assign font_size = block.settings.font_size %}

<div id="delivery-estimator-{{ block.id }}"
     class="delivery-estimator"
     data-cutoff-hour="{{ cutoff_hour }}"
     data-processing-days="{{ processing_days }}"
     data-shipping-min="{{ shipping_min }}"
     data-shipping-max="{{ shipping_max }}"
     data-exclude-weekends="{{ exclude_weekends }}"
     data-show-countdown="{{ show_countdown }}"
     data-holidays="{{ block.settings.holidays }}"
     data-timezone="{{ block.settings.timezone | default: 'America/New_York' }}"
     style="
       --de-text-color: {{ text_color }};
       --de-bg-color: {{ bg_color }};
       --de-border-color: {{ border_color }};
       --de-urgency-color: {{ urgency_color }};
       --de-font-size: {{ font_size }}px;
     ">

  {% if icon_style == 'truck' %}
    <div class="de-icon">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="1" y="3" width="15" height="13"></rect>
        <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
        <circle cx="5.5" cy="18.5" r="2.5"></circle>
        <circle cx="18.5" cy="18.5" r="2.5"></circle>
      </svg>
    </div>
  {% elsif icon_style == 'package' %}
    <div class="de-icon">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
        <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
        <line x1="12" y1="22.08" x2="12" y2="12"></line>
      </svg>
    </div>
  {% elsif icon_style == 'clock' %}
    <div class="de-icon">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <polyline points="12 6 12 12 16 14"></polyline>
      </svg>
    </div>
  {% endif %}

  <div class="de-content">
    <div class="de-delivery-line">
      <span class="de-label" id="de-label-{{ block.id }}">{{ block.settings.label_text | default: 'Estimated delivery' }}:</span>
      <span class="de-date" id="de-date-{{ block.id }}"></span>
    </div>

    {% if show_countdown %}
      <div class="de-countdown-line" id="de-countdown-wrap-{{ block.id }}">
        <span class="de-countdown-label" id="de-countdown-label-{{ block.id }}">{{ block.settings.countdown_text | default: 'Order within' }}</span>
        <span class="de-countdown" id="de-countdown-{{ block.id }}"></span>
        <span class="de-countdown-suffix"><span id="de-countdown-suffix-text-{{ block.id }}">{{ block.settings.countdown_suffix | default: 'to get it by' }}</span>
          <strong id="de-countdown-target-{{ block.id }}"></strong>
        </span>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .delivery-estimator {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 14px 16px;
    margin: 12px 0;
    border: 1.5px solid var(--de-border-color, #e2e2e2);
    border-radius: 8px;
    background: var(--de-bg-color, #fafafa);
    font-size: var(--de-font-size, 14px);
    color: var(--de-text-color, #333);
    line-height: 1.5;
    font-family: inherit;
  }

  .de-icon {
    flex-shrink: 0;
    margin-top: 1px;
    color: var(--de-text-color, #333);
    opacity: 0.8;
  }

  .de-content {
    flex: 1;
  }

  .de-delivery-line {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    align-items: baseline;
  }

  .de-label {
    font-weight: 500;
  }

  .de-date {
    font-weight: 700;
  }

  .de-countdown-line {
    margin-top: 4px;
    font-size: 0.9em;
    opacity: 0.85;
  }

  .de-countdown {
    font-weight: 700;
    color: var(--de-urgency-color, #e63946);
    font-variant-numeric: tabular-nums;
  }

  .de-countdown-suffix strong {
    font-weight: 600;
  }

  /* Hide until JS calculates */
  .delivery-estimator {
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .delivery-estimator.de-ready {
    opacity: 1;
  }

  @media (max-width: 480px) {
    .delivery-estimator {
      padding: 12px 14px;
      gap: 8px;
    }
    .de-icon svg {
      width: 18px;
      height: 18px;
    }
  }
</style>

<script>
  (function() {
    const block = document.getElementById('delivery-estimator-{{ block.id }}');
    if (!block) return;

    const config = {
      cutoffHour: parseInt(block.dataset.cutoffHour) || 14,
      processingDays: parseInt(block.dataset.processingDays) || 1,
      shippingMin: parseInt(block.dataset.shippingMin) || 3,
      shippingMax: parseInt(block.dataset.shippingMax) || 5,
      excludeWeekends: block.dataset.excludeWeekends === 'true',
      showCountdown: block.dataset.showCountdown === 'true',
      holidays: (block.dataset.holidays || '').split(',').filter(Boolean),
      timezone: block.dataset.timezone || 'America/New_York',
      labelTextA: 'Estimated delivery',
      countdownTextA: 'Order within',
      countdownSuffixA: 'to get it by',
      abTestEnabled: false,
      abTestSplit: 50,
      labelTextVariantB: '',
      countdownTextVariantB: '',
      countdownSuffixVariantB: ''
    };

    const dateEl = document.getElementById('de-date-{{ block.id }}');
    const countdownEl = document.getElementById('de-countdown-{{ block.id }}');
    const countdownWrapEl = document.getElementById('de-countdown-wrap-{{ block.id }}');
    const labelEl = document.getElementById('de-label-{{ block.id }}');
    const countdownLabelEl = document.getElementById('de-countdown-label-{{ block.id }}');
    const countdownSuffixTextEl = document.getElementById('de-countdown-suffix-text-{{ block.id }}');
    const countdownTargetEl = document.getElementById('de-countdown-target-{{ block.id }}');
    const clientIdKey = 'dde_client_id_v1';
    let intervalId = null;
    let currentVariant = 'a';
    let impressionTracked = false;
    let abExposureTracked = false;

    config.labelTextA = labelEl
      ? labelEl.textContent.replace(/:\s*$/, '').trim() || config.labelTextA
      : config.labelTextA;
    config.countdownTextA = countdownLabelEl
      ? countdownLabelEl.textContent.trim() || config.countdownTextA
      : config.countdownTextA;
    config.countdownSuffixA = countdownSuffixTextEl
      ? countdownSuffixTextEl.textContent.trim() || config.countdownSuffixA
      : config.countdownSuffixA;

    function clamp(value, min, max) {
      return Math.min(max, Math.max(min, value));
    }

    function toNonEmptyString(value, fallback) {
      if (typeof value !== 'string') return fallback;
      const normalized = value.trim();
      return normalized || fallback;
    }

    function toOptionalString(value) {
      if (typeof value !== 'string') return '';
      return value.trim();
    }

    function setText(el, value, appendColon) {
      if (!el) return;
      el.textContent = appendColon ? value + ':' : value;
    }

    function ensureClientId() {
      try {
        const existing = localStorage.getItem(clientIdKey);
        if (existing) return existing;
        const created = Math.random().toString(36).slice(2) + Date.now().toString(36);
        localStorage.setItem(clientIdKey, created);
        return created;
      } catch (error) {
        return Math.random().toString(36).slice(2);
      }
    }

    function hashToPercent(value) {
      let hash = 0;
      for (let i = 0; i < value.length; i += 1) {
        hash = (hash * 31 + value.charCodeAt(i)) | 0;
      }
      return Math.abs(hash) % 100;
    }

    function isAbActive() {
      return Boolean(
        config.abTestEnabled &&
          (
            config.labelTextVariantB ||
            config.countdownTextVariantB ||
            config.countdownSuffixVariantB
          )
      );
    }

    function assignVariant() {
      if (!isAbActive()) {
        currentVariant = 'a';
        return;
      }
      const split = clamp(config.abTestSplit, 10, 90);
      const bucket = hashToPercent(ensureClientId());
      currentVariant = bucket < split ? 'a' : 'b';
    }

    function applyCopyVariant() {
      assignVariant();
      const useVariantB = currentVariant === 'b' && isAbActive();
      const label = useVariantB && config.labelTextVariantB
        ? config.labelTextVariantB
        : config.labelTextA;
      const countdown = useVariantB && config.countdownTextVariantB
        ? config.countdownTextVariantB
        : config.countdownTextA;
      const suffix = useVariantB && config.countdownSuffixVariantB
        ? config.countdownSuffixVariantB
        : config.countdownSuffixA;

      setText(labelEl, label, true);
      setText(countdownLabelEl, countdown, false);
      setText(countdownSuffixTextEl, suffix, false);
    }

    function trackEvent(event, includeVariant) {
      const payload = {
        event: event,
        variant: includeVariant ? currentVariant : undefined
      };

      const url = '/apps/delivery-date-estimator/event?source=theme_block';
      const body = JSON.stringify(payload);

      if (navigator.sendBeacon) {
        const sent = navigator.sendBeacon(
          url,
          new Blob([body], { type: 'application/json' })
        );
        if (sent) return;
      }

      fetch(url, {
        method: 'POST',
        credentials: 'omit',
        keepalive: true,
        headers: { 'Content-Type': 'application/json' },
        body
      }).catch(function() {
        // Ignore tracking failures.
      });
    }

    function applyRemoteConfig(remote) {
      if (!remote || typeof remote !== 'object') return;

      const intOr = (value, fallback) => {
        const parsed = parseInt(value, 10);
        return Number.isFinite(parsed) ? parsed : fallback;
      };

      config.cutoffHour = intOr(remote.cutoffHour, config.cutoffHour);
      config.processingDays = intOr(remote.processingDays, config.processingDays);
      config.shippingMin = intOr(remote.shippingDaysMin, config.shippingMin);
      config.shippingMax = intOr(remote.shippingDaysMax, config.shippingMax);
      config.fontSize = intOr(remote.fontSize, parseInt(getComputedStyle(block).fontSize, 10) || 14);
      config.excludeWeekends = typeof remote.excludeWeekends === 'boolean'
        ? remote.excludeWeekends
        : config.excludeWeekends;
      config.showCountdown = typeof remote.showCountdown === 'boolean'
        ? remote.showCountdown
        : config.showCountdown;
      config.timezone = typeof remote.timezone === 'string' && remote.timezone
        ? remote.timezone
        : config.timezone;
      config.holidays = Array.isArray(remote.holidays)
        ? remote.holidays.filter((entry) => typeof entry === 'string')
        : config.holidays;
      config.labelTextA = toNonEmptyString(remote.labelText, config.labelTextA);
      config.countdownTextA = toNonEmptyString(remote.countdownText, config.countdownTextA);
      config.countdownSuffixA = toNonEmptyString(remote.countdownSuffix, config.countdownSuffixA);
      config.abTestEnabled = Boolean(remote.abTestEnabled);
      config.abTestSplit = clamp(intOr(remote.abTestSplit, config.abTestSplit), 10, 90);
      config.labelTextVariantB = toOptionalString(remote.labelTextVariantB);
      config.countdownTextVariantB = toOptionalString(remote.countdownTextVariantB);
      config.countdownSuffixVariantB = toOptionalString(remote.countdownSuffixVariantB);

      applyCopyVariant();

      if (typeof remote.textColor === 'string' && remote.textColor) {
        block.style.setProperty('--de-text-color', remote.textColor);
      }
      if (typeof remote.backgroundColor === 'string' && remote.backgroundColor) {
        block.style.setProperty('--de-bg-color', remote.backgroundColor);
      }
      if (typeof remote.borderColor === 'string' && remote.borderColor) {
        block.style.setProperty('--de-border-color', remote.borderColor);
      }
      if (typeof remote.urgencyColor === 'string' && remote.urgencyColor) {
        block.style.setProperty('--de-urgency-color', remote.urgencyColor);
      }
      if (Number.isFinite(config.fontSize)) {
        block.style.setProperty('--de-font-size', config.fontSize + 'px');
      }
    }

    async function loadRemoteConfig() {
      try {
        const response = await fetch('/apps/delivery-date-estimator/config?source=theme_block', {
          method: 'GET',
          credentials: 'omit',
          headers: { Accept: 'application/json' }
        });

        if (!response.ok) return;
        const remote = await response.json();
        applyRemoteConfig(remote);
      } catch (error) {
        // Fall back to block defaults when proxy is unavailable.
      }
    }

    function getNow() {
      return new Date(new Date().toLocaleString('en-US', { timeZone: config.timezone }));
    }

    function isHoliday(date) {
      const dateStr = date.toISOString().split('T')[0];
      return config.holidays.includes(dateStr);
    }

    function isBusinessDay(date) {
      const day = date.getDay();
      if (config.excludeWeekends && (day === 0 || day === 6)) return false;
      if (isHoliday(date)) return false;
      return true;
    }

    function addBusinessDays(startDate, numDays) {
      let current = new Date(startDate);
      let added = 0;
      while (added < numDays) {
        current.setDate(current.getDate() + 1);
        if (isBusinessDay(current)) added++;
      }
      return current;
    }

    function formatDate(date) {
      const options = { weekday: 'short', month: 'short', day: 'numeric' };
      return date.toLocaleDateString('en-US', options);
    }

    function getCutoffToday() {
      const now = getNow();
      const cutoff = new Date(now);
      cutoff.setHours(config.cutoffHour, 0, 0, 0);
      return cutoff;
    }

    function calculate() {
      const now = getNow();
      const cutoff = getCutoffToday();
      const pastCutoff = now >= cutoff;

      let processStart = new Date(now);
      if (pastCutoff || !isBusinessDay(now)) {
        processStart.setDate(processStart.getDate() + 1);
        while (!isBusinessDay(processStart)) {
          processStart.setDate(processStart.getDate() + 1);
        }
      }

      const afterProcessing = addBusinessDays(processStart, config.processingDays);
      const deliveryMin = addBusinessDays(afterProcessing, config.shippingMin);
      const deliveryMax = addBusinessDays(afterProcessing, config.shippingMax);

      let dateText;
      if (config.shippingMin === config.shippingMax) {
        dateText = formatDate(deliveryMin);
      } else {
        dateText = formatDate(deliveryMin) + ' ‚Äì ' + formatDate(deliveryMax);
      }
      dateEl.textContent = dateText;

      if (config.showCountdown && countdownEl && !pastCutoff && isBusinessDay(now)) {
        const diff = cutoff - now;
        const hours = Math.floor(diff / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);

        let timeStr = '';
        if (hours > 0) timeStr += hours + 'h ';
        timeStr += minutes + 'm ' + seconds + 's';

        countdownEl.textContent = timeStr;

        const earlyDelivery = addBusinessDays(
          addBusinessDays(now, config.processingDays),
          config.shippingMin
        );
        if (countdownTargetEl) {
          countdownTargetEl.textContent = formatDate(earlyDelivery);
        }
        if (countdownWrapEl) countdownWrapEl.style.display = '';
      } else if (countdownWrapEl) {
        countdownWrapEl.style.display = 'none';
      }

      if (!block.classList.contains('de-ready')) {
        block.classList.add('de-ready');
      }
    }

    function restartInterval() {
      if (intervalId) {
        clearInterval(intervalId);
        intervalId = null;
      }

      if (config.showCountdown) {
        intervalId = setInterval(calculate, 1000);
      }
    }

    loadRemoteConfig().finally(() => {
      applyCopyVariant();
      calculate();
      restartInterval();

      if (!impressionTracked) {
        trackEvent('widget_impression', isAbActive());
        impressionTracked = true;
      }

      if (isAbActive() && !abExposureTracked) {
        trackEvent('ab_variant_exposed', true);
        abExposureTracked = true;
      }
    });
  })();
</script>

